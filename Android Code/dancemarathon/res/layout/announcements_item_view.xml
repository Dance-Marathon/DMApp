<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:background="@color/White" >

    <ImageView
        android:id="@+id/balloon"
        android:contentDescription="@string/balloon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/balloon" />
    
    <TextView
        android:id="@+id/announcements_text"
        android:layout_width="@dimen/kidimage_width" 
        android:layout_height="@dimen/kidimage_height" />

	<TextView
        android:id="@+id/announcements_date" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textColor="@color/dm_blue_primary"/>
    
</RelativeLayout>