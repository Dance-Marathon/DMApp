<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="12dp"
    	android:paddingStart="12dp">
     	
        <TextView
	        android:id="@+id/tlineitem_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:textSize="20sp"/>
        
    	<TextView
    	    android:id="@+id/tlineitem_location"
       		android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tlineitem_locIcon"
    	    android:layout_toEndOf="@+id/tlineitem_locIcon"
    	    android:layout_alignBottom="@+id/tlineitem_locIcon"
	        android:textSize="12sp"/>
    	
    	<ImageView
    	    android:id="@+id/tlineitem_locIcon"
    	    android:layout_width="12sp"
    	    android:layout_height="12sp"
    	    android:layout_below="@+id/tlineitem_title"
    	    android:src="@android:drawable/ic_menu_mylocation"/>
    	
    </RelativeLayout>
        
    
</RelativeLayout>
