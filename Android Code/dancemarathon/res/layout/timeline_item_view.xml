<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">
    
    <!-- Icon Section -->
    
    <RelativeLayout
   	    android:id="@+id/tlineitem_calIcon"
   	    android:layout_width="60dp"
   	    android:layout_height="60dp"
   	    android:layout_alignParentLeft="true"
   	    android:layout_alignParentStart="true"
   	    android:layout_marginLeft="4dp"
   	    android:layout_marginStart="7dp"
   	    android:layout_marginRight="2dp"
    	android:layout_marginEnd="2dp"
   	    android:background="@drawable/calendar_icon">
   	    
        <TextView 
            android:id="@+id/tlineitem_month"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="15dp"
            android:gravity="center_horizontal|bottom"
            android:textSize="16sp"
            android:textColor="@color/Black"/>
        
         <TextView 
            android:id="@+id/tlineitem_day"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/tlineitem_month"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|top"
            android:textSize="12sp"
            android:textColor="@color/Black"/>
 
   	</RelativeLayout>
    
    <!-- Title and location section -->
    
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/tlineitem_calIcon"
        android:layout_toEndOf="@+id/tlineitem_calIcon"
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="8dp"
   	    android:paddingStart="8dp"
   	    android:paddingRight="2dp"
    	android:paddingEnd="2dp">
     	
        <TextView
	        android:id="@+id/tlineitem_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:textSize="17sp"
	        android:textColor="@color/Black"/>
        
    	<TextView
    	    android:id="@+id/tlineitem_location"
       		android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@+id/tlineitem_locIcon"
    	    android:layout_toEndOf="@+id/tlineitem_locIcon"
    	    android:layout_alignBottom="@+id/tlineitem_locIcon"
	        android:textSize="13sp"/>
    	
    	<ImageView
    	    android:id="@+id/tlineitem_locIcon"
    	    android:layout_width="14dp"
    	    android:layout_height="14dp"
    	    android:layout_below="@+id/tlineitem_title"
    	    android:src="@android:drawable/ic_menu_mylocation"/>
    </RelativeLayout>
    
    <!-- Start Time -->
    
    <TextView
        android:id="@+id/tlineitem_startTime"
   	    android:layout_height="wrap_content"
   	    android:layout_width="wrap_content"
   	    android:layout_centerVertical="true"
   	    android:layout_alignParentRight="true"
   	    android:layout_alignParentEnd="true"
   	    android:paddingRight="7dp"
   	    android:paddingEnd="7dp"
   	    android:paddingLeft="2dp"
    	android:paddingStart="2dp"
   	    android:textSize="14sp"
   	    android:textColor="@color/dm_blue_primary"/>
    
</RelativeLayout>
