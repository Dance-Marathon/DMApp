<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.example.dancemarathon.HomeFragment" >
    
    <!-- Heading -->
    <ImageView android:id="@+id/dance_marathon_header"
        android:src="@drawable/countdown"
        android:contentDescription="@string/dance_marathon"
        android:layout_width="325dp"
        android:layout_height="200dp" 
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-25dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="top|center"/>
    
    <!-- Header Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:textSize="16sp"
        android:textColor="@color/dm_blue_primary"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="top|center" />

    <!-- Announcements -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="210dp"
        android:text="@string/announcements"
        android:textColor="@color/dm_orange_primary"
        android:textSize="22sp"
        android:textStyle="bold" />
        
        <!-- DM Webpage Button -->
	<Button android:id="@+id/website"
	    android:background="@color/dm_blue_primary"
	    android:textColor="@color/White"
	    android:layout_width="90dp"
	    android:layout_height="40dp"
	    android:text="@string/website"
	    android:textSize="12sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|center"
        android:tag="http://www.floridadm.org/"
        android:onClick="openLink" /> 

    <!-- Game Button -->
    <Button android:id="@+id/game"
        android:background="@color/dm_blue_primary"
       android:textColor="@color/White"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="@string/game"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|left"
        android:tag="http://www.google.com/"
        android:onClick="openLink" />

    <!-- Donate Button -->
    <Button android:id="@+id/donate"
        android:background="@color/dm_blue_primary"
        android:textColor="@color/White"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="@string/donate"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|right"
        android:tag="http://www.google.com"
        android:onClick="openLink" />
        
</FrameLayout>
