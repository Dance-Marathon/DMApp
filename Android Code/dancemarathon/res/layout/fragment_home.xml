<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dm_blue_primary"
    tools:context="com.example.dancemarathon.HomeFragment" >
    
    <!-- Heading -->
    <ImageView android:id="@+id/dance_marathon_header"
        android:src="@drawable/dm_icon"
        android:contentDescription="@string/dance_marathon"
        android:layout_width="310dp"
        android:layout_height="100dp" 
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:gravity="top|center"/>
    
    <!-- Heading text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:textSize="14sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="top|center"
        android:gravity="center" />
    
    <!-- DM Webpage Button -->
	<Button android:id="@+id/website"
	    android:layout_width="90dp"
	    android:layout_height="40dp"
	    android:text="@string/website"
	    android:textSize="12sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|center"
        android:tag="http://www.floridadm.org/"
        android:onClick="openLink" /> 

    <!-- Game Button -->
    <Button android:id="@+id/game"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="@string/game"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|left"
        android:tag="http://www.google.com/"
        android:onClick="openLink" />

    <!-- Donate Button -->
    <Button android:id="@+id/donate"
        android:layout_width="85dp"
        android:layout_height="40dp"
        android:text="@string/donate"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="bottom|right"
        android:tag="http://www.google.com"
        android:onClick="openLink" />

    <!-- Facebook -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follow_facebook"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="250dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:gravity="left" />
        
        
    <!-- 144 x 144 -->
    <ImageView android:id="@+id/facebook"
        android:src="@drawable/facebook_icon"
        android:contentDescription="@string/facebook"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:tag="Facebook"
        android:onClick="openLink" />
    
    <!-- Instagram -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follow_instagram"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="240dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:gravity="left" />
        
    <!-- 512 x 512 -->
    <ImageView
        android:id="@+id/instagram"
        android:contentDescription="@string/instagram"
        android:src="@drawable/instagram_icon" 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:gravity="center"
        android:tag="http://www.instagram.com/dmatuf"
        android:onClick="openLink" />
    
    <!-- Twitter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/follow_twitter"
        android:textSize="12sp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="right"
        android:gravity="right" />
    
    <!-- 1139 x 926 -->
    <ImageView
        android:id="@+id/twitter"
        android:contentDescription="@string/twitter"
        android:src="@drawable/twitter_icon" 
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="100dp"
        android:layout_gravity="right"
        android:tag="Twitter"
        android:onClick="openLink" />
    
    <!-- YouTube -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subscribe"
        android:textSize="12sp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="right"
        android:gravity="right" />
    
    <!-- 773 x 481 -->
    <ImageView
        android:id="@+id/youtube"
        android:contentDescription="@string/youtube"
        android:src="@drawable/youtube_icon" 
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:tag="YouTube"
        android:onClick="openLink" />
    
    <!-- Announcements -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/announcements"
        android:textSize="20sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="top|center" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accouncements_content"
        android:textSize="12sp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="top|center" />
        
        
</FrameLayout>
